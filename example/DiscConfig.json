{
  "grid" : {
    "N"  : 500,
    "R0" : 0.1,
    "R1" : 1000.0,
    "spacing" : "natural"
  },

  "disc" : {
    "alpha"   : 1e-3,
    "mass"    : 0.01,
    "Rc"      : 100.0,
    "d2g"     : 0.01,
    "Schmidt" : 1.0,
    "f_grow"  : 1.0,
    "amin"    : 0e-5
    },
  
  "chemistry" : {
    "on"   : false, 
    "type" : "NoReact", 
    "fix_mu" : true,
    "mu"     : 2.4,
    "crate" : 1e-17,
    "use_abundance_file" : true,
    "abundances" : "Eistrup2016.dat",
    "normalize" : true,
    "variable_grain_size" : true
  },

  "eos" : {
     "type" : "simple", 
     "opacity" : "Tazzari2016"
  },

  "star" : {
    "mass" : 1.0,
    "radius" : 1.0,
    "age"  : 1e4
  },

  "transport" : {
    "gas"          : true, 
    "radial drift" : true,
    "diffusion"	   : true		   
  },

  "dust_transport" : {
    "van leer" : false,
    "settling" : false,
    "diffusion" : true
    },

  "photoevaporation" : {
    "on" : true,
    "method" : "internal_const",
    "coeff"  : 1e-9
  },   


  "output" : {
    "directory" : "output",
    "base"	: "disc",
    "format"    : "ascii",
    "first"     : 0.0,
    "last"      : 3e6,
    "interval"  : 1e4,
    "plot"      : true,
    "plot_times" : [0, 1e5, 5e5, 1e6, 3e6]
  }
}
