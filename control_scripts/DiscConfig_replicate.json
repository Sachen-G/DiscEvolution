{
  "grid" : {
    "N"  : 500,
    "R0" : 0.1,
    "R1" : 1000.0,
    "spacing" : "natural"
  },

  "disc" : {
    "alpha"   : 1e-4,
    "mass"    : 0.128,
    "Rc"      : 137.0,
    "unit" : "jup",
    "d2g"     : 0.01,
    "Schmidt" : 1.0,
    "profile" : "LBP",
    "f_grow"  : 1.0,
    "amin"    : 0e-5
  },
  
  "chemistry" : {
    "on"   : true, 
    "type" : "NoReact", 
    "fix_mu" : true,
    "mu"     : 2.4,
    "crate" : 1e-17,
    "use_abundance_file" : true,
    "abundances" : "Eistrup2016.dat",
    "normalize" : true,
    "variable_grain_size" : true
  },

  "eos" : {
    "type" : "iso",
    "opacity" : "Tazzari2016",
    "h0" : 0.033,
    "q" : -0.25,
    "mu" : 2.5
  },

  "star" : {
    "mass" : 1.0,
    "radius" : 2.5,
    "T_eff" : 4000.0
  },

  "transport" : {
    "gas"          : true, 
    "radial drift" : true,
    "diffusion"	   : true		   
  },

  "dust_transport" : {
    "van leer" : false,
    "settling" : false,
    "diffusion" : true
    },

  "photoevaporation" : {
    "on" : true,
    "method" : "internal_const",
    "coeff"  : 1e-9
  },   

  "dust" : {
    "radii_thresholds" : [0.68, 0.95],
    "ice_frag_v" : 1000,
    "dust_frag_v" : 100,
    "p" : 3.5,
    "density" : 1.0,
    "f_grow" : 1.0
  },

  "output" : {
    "directory" : "output",
    "base"	: "disc",
    "format"    : "hdf5",
    "arrange" : "explicit",
    "first"     : 0,
    "last"      : 3e6,
    "interval"  : 1e4,
    "plot"      : true,
    "plot_times" : [0, 1e5, 5e5, 1e6, 3e6],
    "plot_name" : "disc",
    "history" : true,
    "history_times": [0, 1e5, 5e5, 1e6, 3e6]
  },

  "planet" : {
    "t": 1e4,
    "R": 1,
    "Mcore": 1,
    "Menv": 0
  },

  "x-ray" : {
    "model": "Picogna",
    "L_X" : 0
  },

  "euv" : {
    "Phi" : 0
  },

  "fuv" : {
    "photoevaporation" : "None",
    "fuv_field" : 0
  }
}
