{
    "grid": {
        "R0": 0.1,
        "R1": 1000,
        "N": 1000,
        "spacing": "natural",
        "Mdot": 1e-8,
        "fixed": false
    },

    "disc": {
        "type": "Booth-Rd",
        "alpha": 1e-3,
        "mass": 0.05,
        "unit": "jup",
        "Schmidt" : 1.0,
        "gamma"  : 1.0,
        "Rc": 35.0,
        "d2g": 0.01,
        "Mdot"  : 1e-8,
        "amin"  : 1e-5
    },

    "eos": {
        "type": "simple",
        "opacity" : "Tazzari2016"
    },

    "transport": {
        "gas": true,
        "radial drift": true,
        "diffusion": false
    },

    "dust_transport" : {
        "van leer" : false,
        "settling" : false,
        "diffusion" : true
    },

    "photoevaporation" : {
        "on" : false,
        "method" : "internal_const",
        "coeff"  : 1e-9
    },   

    "dust": {
        "feedback": false,
        "settling": false,
        "ice_frag_v" : 1000,
        "dust_frag_v" : 1000,
        "density" : 1.2
    },

    "planetesimal": {
        "active": true,
        "diameter": 100,
        "St_min": 0.01,
        "St_max": 10,
        "pla_eff": 0.1
    },

    "planets": {
        "active": true,
        "planet model": "Bitsch2015Model",
        "Rp": [3],
        "Mp": [1]
    },

    "output" : {
        "directory" : "output_planetesimals",
        "base"	: "disc",
        "planet"  : "planet",
        "format"    : "ascii",
        "first"     : 0.0,
        "last"      : 1e6,
        "interval"  : 1e4,
        "plot"      : false,
        "plot_times" : [0, 1e5, 5e5, 1e6]
    },

    "chemistry" : {
    "on"   : false, 
    "type" : "NoReact", 
    "fix_mu" : true,
    "mu"     : 2.4,
    "crate" : 1e-17,
    "use_abundance_file" : true,
    "abundances" : "Eistrup2016.dat",
    "normalize" : true,
    "variable_grain_size" : true,
    "substep" : 1
    }
}